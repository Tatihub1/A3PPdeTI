import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class Database {
    private static final String URL = "jdbc:mysql://localhost:3306/estoque";
    private static final String USER = "root"; // ajuste conforme necessÃ¡rio
    private static final String PASSWORD = "senha"; // ajuste conforme necessÃ¡rio

    public static Connection getConnection() throws SQLException {
        return DriverManager.getConnection(URL, USER, PASSWORD);
    }
}


import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class CadastroCategoria extends JFrame {
    private JTextField nomeField;
    private JTextArea descricaoArea;

    public CadastroCategoria() {
        setTitle("Cadastro de Categoria");
        setSize(400, 300);
        setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
        setLocationRelativeTo(null);
        
        nomeField = new JTextField(20);
        descricaoArea = new JTextArea(5, 20);
        
        JButton cadastrarButton = new JButton("Cadastrar");
        cadastrarButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                cadastrarCategoria();
            }
        });
        
        JPanel panel = new JPanel();
        panel.add(new JLabel("Nome:"));
        panel.add(nomeField);
        panel.add(new JLabel("DescriÃ§Ã£o:"));
        panel.add(new JScrollPane(descricaoArea));
        panel.add(cadastrarButton);
        
        add(panel);
    }

    private void cadastrarCategoria() {
        String nome = nomeField.getText();
        String descricao = descricaoArea.getText();

        try (Connection connection = Database.getConnection()) {
            String sql = "INSERT INTO categorias (nome, descricao) VALUES (?, ?)";
            PreparedStatement statement = connection.prepareStatement(sql);
            statement.setString(1, nome);
            statement.setString(2, descricao);
            statement.executeUpdate();
            JOptionPane.showMessageDialog(this, "Categoria cadastrada com sucesso!");
            nomeField.setText("");
            descricaoArea.setText("");
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, "Erro ao cadastrar categoria: " + e.getMessage());
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            new CadastroCategoria().setVisible(true);
        });
    }
}


import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class CadastroProduto extends JFrame {
    private JTextField nomeField, precoField, quantidadeField;
    private JTextArea descricaoArea;
    private JComboBox<String> categoriaComboBox;

    public CadastroProduto() {
        setTitle("Cadastro de Produto");
        setSize(400, 400);
        setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
        setLocationRelativeTo(null);
        
        nomeField = new JTextField(20);
        precoField = new JTextField(10);
        quantidadeField = new JTextField(10);
        descricaoArea = new JTextArea(5, 20);
        
        categoriaComboBox = new JComboBox<>(new String[]{"Categoria 1", "Categoria 2"}); // Preencher com categorias do DB

        JButton cadastrarButton = new JButton("Cadastrar");
        cadastrarButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                cadastrarProduto();
            }
        });
        
        JPanel panel = new JPanel();
        panel.add(new JLabel("Nome:"));
        panel.add(nomeField);
        panel.add(new JLabel("DescriÃ§Ã£o:"));
        panel.add(new JScrollPane(descricaoArea));
        panel.add(new JLabel("PreÃ§o:"));
        panel.add(precoField);
        panel.add(new JLabel("Quantidade:"));
        panel.add(quantidadeField);
        panel.add(new JLabel("Categoria:"));
        panel.add(categoriaComboBox);
        panel.add(cadastrarButton);
        
        add(panel);
    }

    private void cadastrarProduto() {
        String nome = nomeField.getText();
        String descricao = descricaoArea.getText();
        String precoStr = precoField.getText();
        String quantidadeStr = quantidadeField.getText();
        int categoriaId = 1; // Defina a lÃ³gica para obter o ID da categoria selecionada

        try (Connection connection = Database.getConnection()) {
            String sql = "INSERT INTO produtos (nome, descricao, preco, quantidade, categoria_id) VALUES (?, ?, ?, ?, ?)";
            PreparedStatement statement = connection.prepareStatement(sql);
            statement.setString(1, nome);
            statement.setString(2, descricao);
            statement.setBigDecimal(3, new BigDecimal(precoStr));
            statement.setInt(4, Integer.parseInt(quantidadeStr));
            statement.setInt(5, categoriaId);
            statement.executeUpdate();
            JOptionPane.showMessageDialog(this, "Produto cadastrado com sucesso!");
            nomeField.setText("");
            descricaoArea.setText("");
            precoField.setText("");
            quantidadeField.setText("");
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, "Erro ao cadastrar produto: " + e.getMessage());
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            new CadastroProduto().setVisible(true);
        });
    }
}

